@model IEnumerable<iCLOTHINGWebsite.Models.ITEM>

@{
    ViewBag.Title = "Index";
}

<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>
    <h2>Catalog</h2>
    <div class="w3-sidebar w3-bar-block w3-border-right" style="display:none" id="mySidebar">
        <button onclick="w3_close()" class="w3-bar-item w3-large">Close &times;</button>
        <div class="col-md-4">
            <h2>@Html.ActionLink("Shop by Brand", "Index", "BRANDS")</h2>
        </div>
        <div class="col-md-4">
            <h2>@Html.ActionLink("Shop by Department", "Index", "DEPARTMENTs")</h2>
        </div>
        <div class="col-md-4">
            <h2>@Html.ActionLink("Shop by Category", "Index", "CATEGORY_ITEMS")</h2>
        </div>
    </div>


    <div>
        <button class="w3-button w3-teal w3-xlarge" onclick="w3_open()">☰</button>
        <p>
            @using (Html.BeginForm("Index", "ITEMs", FormMethod.Get))
            {
                <b>Search By: </b>
                @Html.RadioButton("SearchBy", "Name", true) <text>Name</text>
                @Html.RadioButton("SearchBy", "Brand") <text>Brand</text>
                <b>@Html.TextBox("search", "", htmlAttributes: new { @class = " w-50 form-control" }) </b>
                <input type="submit" value="Search" class="btn btn-success" />
            }
        </p>
       
        <h2 style='font-weight: bold;'>Take a look at all of our Items!</h2>
        <table class="table" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BRAND1.Brand1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DEPARTMENT1.Name)
                </th>
                <th></th>
            </tr>

           
            @foreach (var item in Model.OrderBy(x => x.Name))
            {
                <tr id="id01">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BRAND1.Brand1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEPARTMENT1.Name)
                    </td>
                    <td>
                       
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                       
                    </td>
                </tr>
            }

        </table>
    </div>
    <script>
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block";
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
        }
 
    </script>
</body>
</html>